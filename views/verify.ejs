<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Verifikasi Ijazah</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="min-h-screen bg-gradient-to-br from-blue-100 via-white to-white">
  <%- include('partials/navbar') %>
  <% const showResult = true; %>
  <div class="flex justify-center items-center min-h-[80vh] mt-20 mb-20">
    <div class="w-full max-w-xl bg-white rounded-2xl shadow-2xl border border-green-100 p-10 transition duration-300">
      <h2 class="text-2xl font-bold mb-2 text-center text-blue-700">Verifikasi Ijazah Digital</h2>
      <p class="text-center text-gray-500 mb-8">Unggah file ijazah digital untuk melakukan verifikasi keaslian dan validasi blockchain.</p>
      <form class="space-y-4" enctype="multipart/form-data">
        <div class="mb-4">
          <div class="mb-4">
            <label for="uploadPdf" id="uploadLabel"
              class="flex flex-col items-center justify-center w-full h-32 px-4 transition bg-white border-2 border-dashed border-blue-300 rounded-lg cursor-pointer hover:border-blue-500 hover:bg-blue-50 text-center">
              <svg xmlns="http://www.w3.org/2000/svg" id="uploadIcon" class="w-8 h-8 mb-2 text-blue-400 transition-all" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16l-4-4m0 0l4-4m-4 4h18" />
              </svg>
              <span id="uploadText" class="text-gray-600">Klik atau tarik file PDF ke sini</span>
              <input type="file" name="pdf" id="uploadPdf" accept="application/pdf" class="hidden" required />
            </label>
            <p id="fileName" class="text-sm text-blue-700 mt-2 hidden text-center"></p>
          </div>
        </div>
        <!-- Tombol Verifikasi -->
        <button id="verifyButton" class="w-full bg-[#8e24aa] text-white py-2 rounded hover:bg-[#9c38b6] transition flex items-center justify-center gap-2">
          <svg id="spinner" class="hidden animate-spin h-5 w-5 text-white" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
    <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
    <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8v8z"></path>
          </svg>
          <span id="verifyText">Verifikasi</span>
        </button>

      </form>
      <!-- Tombol Preview -->
      <div class="flex flex-col md:flex-row gap-4 mt-8 hidden" id="resultPreview">
        <button type="button" onclick="document.getElementById('modalPreview').classList.remove('hidden');" class="w-full md:w-auto bg-[#b92b27] text-white px-4 py-2 rounded transition duration-150 active:scale-95">
        Preview Ijazah
      </button>
      </div>

    </div>
  </div>
  <!-- Modal Preview Ijazah -->
  <div id="modalPreview" class="fixed inset-0 bg-black bg-opacity-40 flex items-center justify-center z-50 hidden">
    <div class="bg-white rounded-xl shadow-xl p-8 max-w-5xl w-full relative overflow-auto modal-content">
      
    </div>
  </div>
  <%- include('partials/footer') %>

  <script>
  const form = document.querySelector('form');
  const spinner = document.getElementById('spinner');
  const verifyText = document.getElementById('verifyText');
  const verifyButton = document.getElementById('verifyButton');
  const resultPreview = document.getElementById('resultPreview');
  const uploadedPDFField = document.getElementById('uploadPdf');
  const fileNameDisplay = document.getElementById('fileName');
  const uploadText = document.getElementById('uploadText');
  const uploadIcon = document.getElementById('uploadIcon');
  let uploadedPdfURL = '';

  // Tetap izinkan preview ketika ganti file
  uploadedPDFField.addEventListener('change', function (event) {
    const file = event.target.files[0];
    if (file && file.type === "application/pdf" && file.size > 0) {
      uploadedPdfURL = URL.createObjectURL(file);
      fileNameDisplay.textContent = `ðŸ“„ ${file.name}`;
      fileNameDisplay.classList.remove('hidden');
      uploadText.textContent = 'File berhasil dipilih';
      uploadIcon.classList.replace('text-blue-400', 'text-[#8e24aa]');
    } else {
      uploadText.textContent = 'Mohon upload file PDF yang valid (tidak kosong, max 5MB).';
      uploadIcon.classList.replace('text-green-500', 'text-red-500');
      fileNameDisplay.classList.add('hidden');
      uploadInput.value = ""
    }
  });

  form.addEventListener('submit', async function (e) {
    e.preventDefault();

    const file = uploadedPDFField.files[0];
    if (!file || file.type !== "application/pdf") {
      alert("Mohon upload file PDF.");
      return;
    }

    uploadedPdfURL = URL.createObjectURL(file);

    // Tampilkan spinner
    spinner.classList.remove('hidden');
    verifyText.textContent = 'Memverifikasi...';
    verifyButton.disabled = true;
    resultPreview.classList.add('hidden');

    const formData = new FormData(form);

    try {
      const response = await fetch('/verify', {
        method: 'POST',
        body: formData,
      });

      if (!response.ok) {
        alert('Verifikasi gagal. Coba lagi.');
        return;
      }

      const result = await response.json();
      resultPreview.classList.remove('hidden');

      document.querySelector('#modalPreview .modal-content').innerHTML = `
        <button
          onclick="document.getElementById('modalPreview').classList.add('hidden')"
          class="absolute top-4 right-4 text-gray-500 hover:text-red-600 text-4xl leading-none p-2 rounded-full hover:bg-gray-100 transition"
          aria-label="Close modal"
        >
          &times;
        </button>
        <h3 class="text-xl font-bold mb-6 text-blue-700 text-center col-span-2">Preview Ijazah</h3>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
          <div>
              <div class="mb-2"><b>Status Ijazah:</b> <span class="text-green-600 font-semibold">${ result.sign_valid_status }</span></div>
              <div class="mb-2"><b>Hash Ijazah:</b> <span class="break-all">${result.hash}</span></div>
              <div class="mb-4"><b>Nama Mahasiswa:</b> <span class="break-all">${result.blockchain.student_name || 'Tidak tersedia'}</span></div>
              <div class="mb-4"><b>NPM:</b> <span class="break-all">${result.blockchain.npm || 'Tidak tersedia'}</span></div>
              <div class="mb-4"><b>Timestamp:</b> <span class="break-all">${result.blockchain.timestamp || 'Tidak tersedia'}</span></div>
              <div class="mb-4"><b>Etherscan URL:</b> <a href="${result.blockchain.etherscan_url || "/#"}" target="_blank rel="noopener noreferrer" class="inline-flex items-center gap-2 text-blue-600 hover:text-blue-800 font-medium hover:underline transition"><span class="break-all">${result.blockchain.etherscan_url || ""}</span></a></div>

              <!-- Informasi Pembuat Signature -->
              <div class="mt-6 bg-gray-50 p-4 rounded-lg border">
                <h4 class="font-semibold text-blue-700 mb-2">Informasi Pembuat Digital Signature</h4>
                <p><b>Universitas:</b> ${result.attributes[3]?.value || 'Tidak tersedia'}</p>
                <p><b>Kota:</b> ${result.attributes[2]?.value || 'Tidak tersedia'}</p>
                <p><b>Provinsi:</b> ${result.attributes[1]?.value || 'Tidak tersedia'}</p>
                <p><b>Negara:</b> ${result.attributes[0]?.value || 'Tidak tersedia'}</p>
              </div>
          </div>
          <div class="flex items-center justify-center">
            <iframe id="previewPdf" src="${uploadedPdfURL}" class="border w-full max-w-lg h-96"></iframe>
          </div>
        </div>`;
    } catch (error) {
      alert('Gagal menghubungi server.');
    } finally {
      spinner.classList.add('hidden');
      verifyText.textContent = 'Verifikasi';
      verifyButton.disabled = false;
    }
  });
</script>



</body>
</html>